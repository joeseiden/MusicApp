<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>

<header>
  <% if current_user %>
    <%= button_to("Logout", session_url, method: :delete)  %>
  <% else %>
    <%= button_to("Login", new_session_url, method: :get) %>
    <%= button_to("Sign up", new_user_url, method: :get) %>
  <% end %>
  <% unless current_page?(bands_url) %>
    <%= button_to("Back to Bands", bands_url, method: :get) %>
  <% end %>
</header>

<%= render 'shared/errors'%>


<body>
<%= yield %>

</body>
</html>
